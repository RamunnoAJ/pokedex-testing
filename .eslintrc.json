{
  "env": {
    "browser": true,
    "es6": true,
    "cypress/globals": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["cypress", "jest"],
  "rules": {
    "import/extensions": [
      "error",
      {
        "js": "always",
        "json": "sometimes"
      }
    ],
    "linebreak-style": "off",
    "semi": "off",
    "implicit-arrow-linebreak": "off",
    "comma-dangle": "off",
    "object-curly-newline": "off"
  }
}
